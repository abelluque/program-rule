package com.ablehealth.measures.hedis.year2019;

import com.ablehealth.model.*
import com.ablehealth.payloads.*;
import com.ablehealth.results.*;

global PatientResults controlSet;

rule 'Year2019.Cis2.Success.performance_met'
when
    PatientDenominator($program: program, $patient: patient, measure == 'Year2019.Cis2')
    HedisYear2019Cis2SuccessPerformanceMet()
then
    controlSet.addPatientMeasureStatus($program, $patient, 'Year2019.Cis2', MeasureStatusValue.SUCCESS, "performance_met");
end

rule 'Year2019.Cis2.Gap.performance_not_met'
when
    PatientDenominator($program: program, $patient: patient, measure == 'Year2019.Cis2')
then
    controlSet.addPatientMeasureStatus($program, $patient, 'Year2019.Cis2', MeasureStatusValue.GAP, "performance_not_met");
end
